{
    "extends": "./tsconfig.base.json",
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "./src/**/*.test.*",
        "**/__tests__/**/*",
    ],
    "compilerOptions": {
        "types": [
            "@lesnoypudge/types-global-base",
            "@lesnoypudge/types-global-web",
            "@lesnoypudge/types-global-react"
        ],
        "paths": {
            "@utils/*": [
                "./src/utils/*"
            ],
            "@hooks/*": [
                "./src/hooks/*"
            ],
            "@entities/*": [
                "./src/entities/*"
            ],
            "@components/*": [
                "./src/components/*"
            ]
        },
        "jsx": "react-jsx",
        "lib": [
            "ES2023",
            "DOM",
            "DOM.Iterable"
        ]
    }
}