{
    "extends": "./tsconfig.base.json",
    "include": [
        "src/**/*",
        "node_modules/@types"
    ],
    "exclude": [],
    "compilerOptions": {
        "types": [
            "@lesnoypudge/types-global-base",
            "@lesnoypudge/types-global-web",
            "@lesnoypudge/types-global-react"
        ],
        "paths": {
            "@utils/*": [
                "src/utils/*"
            ],
            "@hooks/*": [
                "src/hooks/*"
            ],
            "@entities/*": [
                "src/entities/*"
            ]
        },
        "jsx": "react-jsx",
        "lib": [
            "ES2023",
            "DOM",
            "DOM.Iterable"
        ]
    }
}