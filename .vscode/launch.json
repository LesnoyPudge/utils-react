{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current Test File",
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
            "args": [
                "run",
                "${relativeFile}",
                "--config=vitest.config.ts",
                "--inspect-brk",
                "--browser",
                "--test-timeout=0",
                "--no-file-parallelism"
            ],
            "smartStep": true,
            "console": "integratedTerminal",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "_Run Vitest Browser",
            "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
            "console": "integratedTerminal",
            "args": [
                "--config=vitest.config.ts",
                "--inspect-brk",
                "--browser",
                "--test-timeout=0",
                "--no-file-parallelism",
            ]
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "_Attach to Vitest Browser",
            "port": 9229
        }
    ],
    "compounds": [
        {
            "name": "Debug Vitest Browser",
            "configurations": [
                "_Attach to Vitest Browser",
                "_Run Vitest Browser"
            ],
            "stopAll": true
        }
    ]
}